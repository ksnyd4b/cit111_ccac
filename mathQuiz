package week5;

import java.util.Scanner;

/**
 *
 * @author ktina
 */
public class MathQuiz {
    
    public static void main(String[] args) {
        int userAnswer;
        int correctAnswer = 5;
        int numLoops = 0;
        int attempts = 0;
        final int attemptsallowed = 3;
        System.out.println("Let's check your math skills!");
        
        Scanner userInputScanner = new Scanner(System.in);
       
       
        while(numLoops < 3)   
     
          
         while(true){
         
        System.out.println("What is 5+5/2?");
            
        userAnswer = userInputScanner.nextInt();
        
            if (userAnswer == correctAnswer) {
                System.out.println("You're a genious!!");
                
            } else{ 
                System.out.println("Ohhh nooo try again!!");
            } if( attempts == attemptsallowed){ 
                System.out.println("Nice try! The answer is 5!");
                
            } // close else
            numLoops = numLoops + 1;
         } // close while()loop
    } // close main method
    
} // close class 
            
